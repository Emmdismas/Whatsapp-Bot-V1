services:
  - type: web
    name: shulebot-app
    env: docker
    plan: starter
    region: frankfurt
    dockerfilePath: ./Dockerfile
    autoDeploy: true

    envVars:
      - key: PORT
        value: 3000

      - key: WHATSAPP_TOKEN
        sync: false

      - key: VERIFY_TOKEN
        sync: false

      - key: LARAVEL_URL
        sync: false

      - key: LARAVEL_API_KEY
        sync: false

      - key: OPENAI_API_KEY
        sync: false

      - key: REDIS_URL
        value: redis://redis-shulebot:6379

  - type: redis
    name: redis-shulebot
    plan: starter
    region: frankfurt
    maxmemoryPolicy: allkeys-lru
